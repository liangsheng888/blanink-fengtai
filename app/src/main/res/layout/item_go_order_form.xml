<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingTop="5dp"
    android:layout_margin="5dp">
  <LinearLayout
      android:id="@+id/rl_category"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:paddingRight="20dp">
      <TextView
          android:id="@+id/tv_company_category"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textColor="@color/colorBlack"
          android:text="产品类"/>
      <RelativeLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/delverTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorBlack"
              android:text="交货日期:"/>
          <TextView
              android:id="@+id/tv_delverTime"
              android:layout_toRightOf="@id/delverTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </RelativeLayout>
  </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/rl_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
      >
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="产品名称:"/>
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_toRightOf="@id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </RelativeLayout>
    <include layout="@layout/layout_line"></include>


</LinearLayout>