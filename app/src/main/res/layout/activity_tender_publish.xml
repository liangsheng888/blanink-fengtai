<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tender_publish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/sys_title_background_color"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:background="@color/colorBackGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bid_apply_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">

        <TextView
            android:id="@+id/come_order_tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布招标"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bid_apply_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/last"
            android:gravity="center"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/bid_apply_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorBackGround"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/go_order_add_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="招标标题:"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RelativeLayout
                        android:id="@+id/rl_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_theme"
                        android:layout_toEndOf="@+id/tv_theme">

                        <EditText
                            android:id="@+id/tender_et_title"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center|right"
                            android:background="@null"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:layout_marginRight="30dp"

                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                        </EditText>

                    </RelativeLayout>

                </RelativeLayout>
                 <include layout="@layout/layout_line"></include>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_product"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:text="采购产品:" />

                    <RelativeLayout
                        android:id="@+id/rl_product"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@id/tv_product"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/et_product"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="center|right"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">

                        </EditText>

                    </RelativeLayout>


                </RelativeLayout>
                <include layout="@layout/layout_line"></include>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_first_price"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:text="预付定金:" />

                    <RelativeLayout
                        android:id="@+id/rl_first_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@id/tv_first_price"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/et_first_price"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="center|right"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">

                        </EditText>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="%" />
                </RelativeLayout>
                <include layout="@layout/layout_line"></include>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignBaseline="@+id/rl_price"
                        android:layout_alignBottom="@+id/rl_price"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:text="目标价格:" />

                    <RelativeLayout
                        android:id="@+id/rl_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@id/tv_price2"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/et_price"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="center|right"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="16sp">

                        </EditText>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="元"></TextView>
                </RelativeLayout>
                <include layout="@layout/layout_line"></include>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:text="产品数量:" />

                    <RelativeLayout
                        android:id="@+id/rl_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@id/tv_num"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/et_num"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:singleLine="true"
                            android:textSize="16sp">

                        </EditText>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="个"></TextView>


                </RelativeLayout>
                <include layout="@layout/layout_line"></include>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_hand_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignBaseline="@+id/rl_hand_date"
                        android:layout_alignBottom="@+id/rl_hand_date"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:text="截止日期:" />

                    <RelativeLayout
                        android:id="@+id/rl_hand_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_hand_date"
                        android:layout_toLeftOf="@id/tv_date"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/et_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@null"
                            android:gravity="center|right"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="16sp">

                        </EditText>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/right_32" />
                </RelativeLayout>
                <include layout="@layout/layout_line"></include>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/go_order_add_ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/go_order_add_ll"
                android:orientation="vertical">

                <com.blanink.view.NoScrollListview
                    android:id="@+id/lv_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.blanink.view.NoScrollListview>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="#fff"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:paddingTop="10dp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"

                        android:text="备注信息:" />

                    <RelativeLayout
                        android:id="@+id/rl_note"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/tv_note"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/et_note"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:padding="5dp"
                            android:hint="请填写备注信息"
                            android:gravity="top"
                            android:textSize="16sp"></EditText>

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                     <TextView
                         android:id="@+id/tv"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/black"
                         android:textSize="16sp"
                         android:visibility="gone"
                         android:text="添加图片"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_below="@id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/go_order_add_ll2"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/selector_red"
                    android:text="发布招标信息"
                    android:textColor="#fff"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
    </RelativeLayout>

