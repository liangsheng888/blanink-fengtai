<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_state"
    android:background="@drawable/selector_gray_pressed">
    <RelativeLayout
        android:id="@+id/rl_body"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/company_default"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空行互联"
                android:textSize="16sp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/next_black"
                android:textColor="@color/colorBlack"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorGray"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:text="3天" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/colorGray"
                android:text="年山东哪的开发了妈妈都发上来了免费" />
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
        <ImageView
            android:id="@+id/iv_not_red"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/shape_red"/>

</RelativeLayout>
    <View
        android:layout_below="@id/rl_body"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorBackGround"></View>
</RelativeLayout>
