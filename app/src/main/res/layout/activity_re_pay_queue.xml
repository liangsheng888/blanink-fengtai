<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_re_pay_queue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".ui.activity.borrowRepay.RePayQueue">
    <RelativeLayout
        android:id="@+id/rl_re_pay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="还款列表"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_re_pay_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
    </RelativeLayout>
    <com.blanink.view.MyViewPager
        android:id="@+id/vp_rePay"
        android:layout_below="@id/rl_re_pay"
        android:layout_width="match_parent"
        android:layout_height="120dp">
    </com.blanink.view.MyViewPager>
    <LinearLayout
        android:id="@+id/ll_rePay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:layout_below="@id/vp_rePay"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/re_pay_queue"
            android:layout_height="match_parent"
            android:gravity="center" >
            <ImageView
                android:id="@+id/iv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zd_64"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="账单"
                android:layout_toRightOf="@id/iv_order"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_order"
                android:layout_below="@id/tv_order"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:text="我的还款历史"/>
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="@color/colorBackGround"
            ></View>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/framgent_seek_rl_superSeek"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zd_64"
                />
            <TextView
                android:id="@+id/tv_seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="还款"
                android:textSize="14sp"
                android:layout_toRightOf="@id/iv_seek"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_seek"
                android:layout_below="@id/tv_seek"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="资金还贷"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/more"
        android:layout_below="@id/ll_rePay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:background="#fff">
    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:text="更多"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/next_black"
        android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <com.blanink.view.NoScrollListview
        android:id="@+id/lv"
        android:layout_marginTop="1dp"
        android:layout_below="@id/more"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.blanink.view.NoScrollListview>
</RelativeLayout>
