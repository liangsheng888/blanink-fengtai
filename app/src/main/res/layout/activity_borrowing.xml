<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_borrowing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".ui.activity.borrowRepay.BorrowingComeOrderQueue">
    <RelativeLayout
        android:id="@+id/rl_re_pay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="借款来单列表"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
         <TextView
             android:id="@+id/tv_borrow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="融资"
             android:textColor="#fff"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"/>

    </RelativeLayout>
    <com.blanink.view.RefreshListView
        android:id="@+id/lv_borrow"
        android:layout_below="@id/rl_re_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </com.blanink.view.RefreshListView>
</RelativeLayout>
