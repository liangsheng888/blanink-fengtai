<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackGround">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_product_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            />
        <!--<ImageView
            android:id="@+id/iv_product_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />-->
        <RelativeLayout
            android:id="@+id/product_detail"
            android:layout_toRightOf="@id/iv_product_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#f00"
                android:text="iphone6s"/>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_below="@id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="最低价格:"/>

            <TextView
                android:id="@+id/tv_down_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="3000"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_price2"
                android:layout_below="@id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="最高价格:"/>

                <TextView
                    android:id="@+id/tv_high_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="8000"
                    />
            </LinearLayout>

           <TextView
               android:id="@+id/tv_specific_description"
               android:layout_below="@id/ll_price2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="5dp"
               android:ellipsize="end"
               android:singleLine="true"
               android:text=""
               />
            <!--  关键字段 -->
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/rl"
        android:background="@color/colorBackGround"></View>
</RelativeLayout>
