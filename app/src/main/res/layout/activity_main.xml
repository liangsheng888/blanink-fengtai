    <LinearLayout
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RadioButton
            android:id="@+id/main_rb_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"

            android:drawableTop="@drawable/main_selector_seek"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/main_color_selector" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/main_rb_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:drawableTop="@drawable/main_selector_talk"
                android:gravity="center"
                android:text="沟通"
                android:textColor="@color/main_color_selector" />
            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/em_unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <RadioButton
                android:id="@+id/main_rb_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/main_selector_notify"
                android:gravity="center"
                android:text="通知"
                android:textColor="@color/main_color_selector" />
            <TextView
                android:id="@+id/unread_notify_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/em_unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />
        </RelativeLayout>






        <RadioButton
            android:id="@+id/main_rb_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_selector_mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/main_color_selector" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_above="@id/main_rg"
        android:background="@color/colorBackGround"></View>
</RelativeLayout>
