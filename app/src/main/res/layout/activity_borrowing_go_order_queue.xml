<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_borrowing_go_order_queue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".ui.activity.borrowRepay.BorrowingGoOrderQueue">
    <RelativeLayout
        android:id="@+id/rl_re_pay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="借款去单列表"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_borrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
        <TextView
            android:id="@+id/tv_borrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借款申请"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/ll"
        android:layout_below="@id/rl_re_pay"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_height="35dp">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorTheme"
            android:text="借款列表"
            android:checked="true"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/text_color_selector"
            android:layout_weight="1"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_color_selector"
            android:gravity="center"
            android:text="资金需求已安排，未发送"
            android:button="@null"
            android:background="#fff"/>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_borrow"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_below="@+id/ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </FrameLayout>
</RelativeLayout>
