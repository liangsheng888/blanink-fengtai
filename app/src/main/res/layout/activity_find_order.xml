<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".ui.activity.order.LookBrowseOrder">
    <RelativeLayout
        android:id="@+id/findOrder_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:text="浏览订单"/>
        <ImageView
            android:id="@+id/findOrder_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/last"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <!--<com.jude.rollviewpager.RollPagerView
        android:layout_below="@id/findOrder_rl"
        android:layout_width="match_parent"
        android:id="@+id/findOrder_guangao"
        android:background="#fff"
        android:layout_height="140dp">
    </com.jude.rollviewpager.RollPagerView>-->
    <android.support.v4.view.ViewPager
        android:layout_below="@id/findOrder_rl"
        android:layout_width="match_parent"
        android:id="@+id/findOrder_guangao"
        android:background="#fff"
        android:layout_height="140dp"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/ll_viewpager_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@id/findOrder_guangao"
        android:orientation="horizontal">

    </LinearLayout>
    <ListView
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:id="@+id/findOrder_lv_order"
        android:layout_below="@id/ll_viewpager_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </ListView>
     <RelativeLayout
         android:id="@+id/rl_order_null"
         android:layout_below="@id/findOrder_lv_order"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#fff">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:textSize="18sp"
             android:text="暂无数据"
             android:drawableTop="@mipmap/null_100"/>
     </RelativeLayout>

</RelativeLayout>
