<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_next_family_manage_product_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".ui.activity.lastnext.NextFamilyManageProductDetail">

    <RelativeLayout
        android:id="@+id/rl_product_detail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="产品详情"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/rl_product_detail"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fff">
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:id="@+id/rl_product_detail2"
        android:layout_below="@id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iphone6s详情"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="#000"
            android:background="#fff"/>
        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_below="@id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_product_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="产品类"/>
            <View
                android:id="@+id/view"
                android:layout_toRightOf="@id/tv_product_category"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBackGround"></View>
            <TextView
                android:id="@+id/tv_name"
                android:layout_toRightOf="@id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="ipnone6s"/>

            <View
                android:id="@+id/view2"
                android:layout_toRightOf="@id/tv_name"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBackGround"></View>
            <TextView
                android:id="@+id/tv_finished"
                android:layout_toRightOf="@id/view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="已经生产"/>
            <TextView
                android:id="@+id/tv_finish_num"
                android:layout_toRightOf="@id/tv_finished"
                android:layout_width="wrap_content"
                android:textColor="#f00"
                android:layout_height="wrap_content"
                android:text="500"/>
            <TextView

                android:layout_toRightOf="@id/tv_finish_num"
                android:layout_width="wrap_content"
                android:textColor="#f00"
                android:layout_height="wrap_content"
                android:text="台"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/product_detail"
            android:layout_below="@id/rl_detail"
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:text="江苏南京"/>
            <LinearLayout
                android:id="@+id/ll_price"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格范围:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"
                    android:text="2000-100000"/>

            </LinearLayout>
            <com.blanink.view.NoScrollGridview
                android:id="@+id/gv_key_field"
                android:padding="5dp"
                android:layout_below="@id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:numColumns="2">
            </com.blanink.view.NoScrollGridview>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_remarks_detail"
        android:layout_below="@id/rl_product_detail2"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_remark_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价详情(来单)"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:background="#fff"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="更多"
            />

    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_below="@id/rl_remarks_detail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackGround"></View>
    <LinearLayout
        android:id="@+id/rl_category"
        android:layout_below="@id/view4"
        android:background="#fff"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/sp_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:entries="@array/category"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"></Spinner>

            <Spinner
                android:id="@+id/sp_category"
                android:layout_toRightOf="@id/sp_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:entries="@array/category"
                android:gravity="center_vertical"

                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2012-6-10"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:layout_alignParentRight="true"  />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@id/rl_category">

        <TextView
            android:id="@+id/tv_remark"

            android:layout_width="match_parent"
            android:background="#fff"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="评价"
            android:textColor="@color/colorTheme"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            />
        <com.blanink.view.NoScrollListview
            android:id="@+id/lv_remark"
            android:layout_below="@id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.blanink.view.NoScrollListview>
        <TextView
            android:id="@+id/tv_remark_more"
            android:layout_below="@id/lv_remark"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="更多回复"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/review"
        android:layout_marginTop="5dp"
        android:layout_below="@id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#fff">
        <TextView
            android:id="@+id/tv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自我检讨"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="#0fb295"/>
        <com.blanink.view.NoScrollListview
            android:id="@+id/lv_review"
            android:layout_below="@id/tv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.blanink.view.NoScrollListview>
        <TextView
            android:id="@+id/tv_review_more"
            android:layout_below="@id/lv_review"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="更多回复"/>
    </RelativeLayout>
   <RelativeLayout
       android:id="@+id/detail_introduce"
       android:layout_below="@id/review"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="5dp"
       android:background="#fff">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="16sp"

           android:layout_marginLeft="5dp"
           android:text="详情描述"/>

   </RelativeLayout>
</RelativeLayout>
    </ScrollView>
