<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_last_family_manage_new_add_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.lastnext.LastFamilyManageNewAddCustomer">
    <RelativeLayout android:id="@+id/last_family_manage_customer_add_rl"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/colorTheme"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/customer_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="创建客户"
        android:textColor="#fff"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/customer_add_iv_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/last" />
</RelativeLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/last_family_manage_customer_add_rl"
        android:layout_alignParentStart="true">
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/customer_add_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/go_order_add_rl_supplier"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:text="公司全名:" />

            <RelativeLayout
                android:id="@+id/rl_company_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_company_name"
                android:background="@color/colorBackGround">

                <EditText
                    android:id="@+id/et_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:background="#fff">

                </EditText>

            </RelativeLayout>

        </RelativeLayout>
        <include layout="@layout/layout_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:text="公司主营:" />

            <RelativeLayout
                android:id="@+id/rl_major"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_major"
                android:background="@color/colorBackGround">

                <EditText
                    android:id="@+id/et_major"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:background="#fff">

                </EditText>

            </RelativeLayout>

        </RelativeLayout>
        <include layout="@layout/layout_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:padding="5dp">
            <TextView
                android:id="@+id/tv_contact_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/rl_contact_address"
                android:layout_alignBottom="@+id/rl_contact_address"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:text="联系地址:" />

            <RelativeLayout
                android:id="@+id/rl_contact_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_contact_address"
                android:background="@color/colorBackGround">

                <EditText
                    android:id="@+id/et_contact_address"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#fff"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"

                    android:gravity="center_vertical"
                    android:singleLine="true">

                </EditText>

            </RelativeLayout>



        </RelativeLayout>
        <include layout="@layout/layout_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:padding="5dp">
            <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/rl_contact_phone"
                android:layout_alignBottom="@+id/rl_contact_phone"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:text="联系电话:" />
            phone
            <RelativeLayout
                android:id="@+id/rl_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_contact_phone"
                android:background="@color/colorBackGround">

                <EditText
                    android:id="@+id/et_contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#fff"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"

                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                </EditText>

            </RelativeLayout>



        </RelativeLayout>
        <include layout="@layout/layout_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/rl_contact"
                android:layout_alignBottom="@+id/rl_contact"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:text=" 联系人:" />

            <RelativeLayout
                android:id="@+id/rl_contact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_contact"
                android:background="@color/colorBackGround">

                <EditText
                    android:id="@+id/et_contact"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:singleLine="true">

                </EditText>

            </RelativeLayout>
        </RelativeLayout>
        <include layout="@layout/layout_line"></include>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:padding="5dp">




            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:text="邮 箱:"
                android:layout_marginStart="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_email"
                android:background="@color/colorBackGround">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#fff"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                </EditText>

            </RelativeLayout>

        </RelativeLayout>
        <include layout="@layout/layout_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#fff"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:gravity="top"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:text="备注信息:" />

            <RelativeLayout
                android:id="@+id/rl_note"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_note"
                android:background="@color/colorBackGround">

                <EditText
                    android:id="@+id/et_note"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:maxLines="6"
                    android:singleLine="true"
                    android:textSize="16sp">

                </EditText>

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_below="@id/customer_add_info"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:textColor="#fff"
        android:text="保存"
        android:background="@drawable/corners_bg_red"/>

</LinearLayout>
    </ScrollView>
</RelativeLayout>
