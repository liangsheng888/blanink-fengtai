<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.blanink.view.RoundProgressBar
        android:id="@+id/roundProgressBar"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerInParent="true"
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="@android:color/black"
        android_custom:roundWidth="5dip"
        android_custom:textColor="#9A32CD"
        android_custom:textIsDisplayable="false"
        android_custom:textSize="18sp"></com.blanink.view.RoundProgressBar>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="流程a"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/roundProgressBar"/>
</RelativeLayout>