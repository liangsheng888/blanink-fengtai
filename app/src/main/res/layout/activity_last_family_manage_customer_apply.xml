<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_last_family_manage_customer_apply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".ui.activity.lastnext.LastFamilyManageCustomerApply">
    <RelativeLayout
        android:id="@+id/last_family_manage_customer_apply_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/colorTheme">
        <TextView
            android:id="@+id/customer_apply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="客户合作"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/customer_apply_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="返回"
            android:textColor="#fff"
            android:gravity="center"
            android:drawableLeft="@drawable/last" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/last_family_manage_customer_apply_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/company_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorTheme"
                android:textSize="16sp"
                android:text=""/>
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTheme"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:text="实有"/>

        </RelativeLayout>
        <include layout="@layout/layout_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingTop="5dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_xin_yu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text=""/>
            <TextView
                android:id="@+id/tv_company_xin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_xin_yu"
                android:text="公司信誉:"
                android:textColor="#000"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingTop="5dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="负责人:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_major_person"
                android:layout_toRightOf="@id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text=""/>
            <TextView
                android:id="@+id/tv_company_zi_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_remark"
                android:text="自评:"
                android:textColor="#000"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingTop="5dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="电话:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_phone"
                android:layout_toRightOf="@id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_other_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text=""/>
            <TextView
                android:id="@+id/tv_company_remark_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_other_remark"
                android:text="他评:"
                android:textColor="#000"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingTop="5dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="简介:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_introduce"
                android:layout_toRightOf="@id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingTop="5dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="地址:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_company_address"
                android:layout_toRightOf="@id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="主页:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_url"
                android:layout_toRightOf="@id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/customer_delete_relation_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_info"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:background="#fff">
        <include layout="@layout/layout_line"></include>

        <RelativeLayout
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="填写申请信息" />

        </RelativeLayout>
        <include layout="@layout/layout_line"></include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/colorBackGround">
            <EditText
                android:id="@+id/et_apply_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="6"
                android:hint="填写申请信息"
                android:textSize="16sp"
                android:gravity="top"
                android:paddingLeft="5dp"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_apply"
        android:layout_below="@id/customer_delete_relation_rl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/selector_red"
        android:text="发出申请"
        android:textColor="#fff"
        android:layout_margin="15dp"
        />
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
